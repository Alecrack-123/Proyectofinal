<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.proyectofinal.BilleteraVirtualController">
    <MenuBar>
        <Menu text="Inicio">
            <MenuItem text="Registrar Usuario" onAction="#mostrarRegistroUsuario" />
            <MenuItem text="Iniciar Sesión" onAction="#mostrarInicioSesion" />
        </Menu>
        <Menu text="Gestión">
            <MenuItem text="Gestionar Usuarios" onAction="#mostrarGestionUsuarios" />
            <MenuItem text="Gestionar Cuentas" onAction="#mostrarGestionCuentas" />
            <MenuItem text="Gestionar Transacciones" onAction="#mostrarGestionTransacciones" />
            <MenuItem text="Gestionar Presupuestos" onAction="#mostrarGestionPresupuestos" />
            <MenuItem text="Gestionar Categorías" onAction="#mostrarGestionCategorias" />
        </Menu>
        <Menu text="Reportes">
            <MenuItem text="Generar Reporte PDF" onAction="#generarReportePDF" />
            <MenuItem text="Generar Reporte CSV" onAction="#generarReporteCSV" />
        </Menu>
    </MenuBar>

    <TabPane>
        <!-- Tab para Usuarios -->
        <Tab text="Usuarios">
            <VBox spacing="10" padding="10">
                <HBox spacing="10">
                    <TextField fx:id="txtIdUsuario" promptText="ID Usuario" />
                    <TextField fx:id="txtNombreUsuario" promptText="Nombre" />
                    <TextField fx:id="txtCorreoUsuario" promptText="Correo" />
                    <TextField fx:id="txtTelefonoUsuario" promptText="Teléfono" />
                    <TextField fx:id="txtDireccionUsuario" promptText="Dirección" />
                    <TextField fx:id="txtSaldoUsuario" promptText="Saldo" />
                    <Button text="Crear Usuario" onAction="#crearUsuario" />
                </HBox>
                <TableView fx:id="tblUsuarios">
                    <columns>
                        <TableColumn text="ID" fx:id="colIdUsuario" />
                        <TableColumn text="Nombre" fx:id="colNombreUsuario" />
                        <TableColumn text="Correo" fx:id="colCorreoUsuario" />
                        <TableColumn text="Teléfono" fx:id="colTelefonoUsuario" />
                        <TableColumn text="Dirección" fx:id="colDireccionUsuario" />
                        <TableColumn text="Saldo" fx:id="colSaldoUsuario" />
                    </columns>
                </TableView>
            </VBox>
        </Tab>

        <!-- Tab para Cuentas -->
        <Tab text="Cuentas">
            <VBox spacing="10" padding="10">
                <HBox spacing="10">
                    <TextField fx:id="txtIdCuenta" promptText="ID Cuenta" />
                    <TextField fx:id="txtNombreBanco" promptText="Nombre Banco" />
                    <TextField fx:id="txtNumeroCuenta" promptText="Número Cuenta" />
                    <TextField fx:id="txtTipoCuenta" promptText="Tipo Cuenta" />
                    <TextField fx:id="txtSaldoCuenta" promptText="Saldo" />
                    <Button text="Crear Cuenta" onAction="#crearCuenta" />
                </HBox>
                <TableView fx:id="tblCuentas">
                    <columns>
                        <TableColumn text="ID" fx:id="colIdCuenta" />
                        <TableColumn text="Banco" fx:id="colNombreBanco" />
                        <TableColumn text="Número" fx:id="colNumeroCuenta" />
                        <TableColumn text="Tipo" fx:id="colTipoCuenta" />
                        <TableColumn text="Saldo" fx:id="colSaldoCuenta" />
                    </columns>
                </TableView>
            </VBox>
        </Tab>

        <!-- Tab para Transacciones -->
        <Tab text="Transacciones">
            <VBox spacing="10" padding="10">
                <HBox spacing="10">
                    <TextField fx:id="txtIdTransaccion" promptText="ID Transacción" />
                    <DatePicker fx:id="dtpFechaTransaccion" promptText="Fecha" />
                    <TextField fx:id="txtTipoTransaccion" promptText="Tipo" />
                    <TextField fx:id="txtMontoTransaccion" promptText="Monto" />
                    <TextField fx:id="txtDescripcionTransaccion" promptText="Descripción" />
                    <Button text="Crear Transacción" onAction="#crearTransaccion" />
                </HBox>
                <TableView fx:id="tblTransacciones">
                    <columns>
                        <TableColumn text="ID" fx:id="colIdTransaccion" />
                        <TableColumn text="Fecha" fx:id="colFechaTransaccion" />
                        <TableColumn text="Tipo" fx:id="colTipoTransaccion" />
                        <TableColumn text="Monto" fx:id="colMontoTransaccion" />
                        <TableColumn text="Descripción" fx:id="colDescripcionTransaccion" />
                    </columns>
                </TableView>
            </VBox>
        </Tab>

        <!-- Tab para Presupuestos -->
        <Tab text="Presupuestos">
            <VBox spacing="10" padding="10">
                <HBox spacing="10">
                    <TextField fx:id="txtIdPresupuesto" promptText="ID Presupuesto" />
                    <TextField fx:id="txtNombrePresupuesto" promptText="Nombre" />
                    <TextField fx:id="txtMontoTotalPresupuesto" promptText="Monto Total" />
                    <TextField fx:id="txtMontoGastadoPresupuesto" promptText="Monto Gastado" />
                    <Button text="Crear Presupuesto" onAction="#crearPresupuesto" />
                </HBox>
                <TableView fx:id="tblPresupuestos">
                    <columns>
                        <TableColumn text="ID" fx:id="colIdPresupuesto" />
                        <TableColumn text="Nombre" fx:id="colNombrePresupuesto" />
                        <TableColumn text="Monto Total" fx:id="colMontoTotalPresupuesto" />
                        <TableColumn text="Monto Gastado" fx:id="colMontoGastadoPresupuesto" />
                    </columns>
                </TableView>
            </VBox>
        </Tab>

        <!-- Tab para Categorías -->
        <Tab text="Categorías">
            <VBox spacing="10" padding="10">
                <HBox spacing="10">
                    <TextField fx:id="txtIdCategoria" promptText="ID Categoría" />
                    <TextField fx:id="txtNombreCategoria" promptText="Nombre" />
                    <TextField fx:id="txtDescripcionCategoria" promptText="Descripción" />
                    <Button text="Crear Categoría" onAction="#crearCategoria" />
                </HBox>
                <TableView fx:id="tblCategorias">
                    <columns>
                        <TableColumn text="ID" fx:id="colIdCategoria" />
                        <TableColumn text="Nombre" fx:id="colNombreCategoria" />
                        <TableColumn text="Descripción" fx:id="colDescripcionCategoria" />
                    </columns>
                </TableView>
            </VBox>
        </Tab>

        <!-- Tab para Estadísticas -->
        <Tab text="Estadísticas">
            <VBox spacing="10" padding="10">
                <BarChart title="Gastos por Categoría" fx:id="barChartGastos">
                    <xAxis>
                        <CategoryAxis label="Categorías" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Monto Gastado" />
                    </yAxis>
                </BarChart>
            </VBox>
        </Tab>
    </TabPane>
</VBox>